#:kivy 1.9.0

#:import cs colorsys

#:set col_bg (43/255, 43/255, 43/255, 1)
#:set col_fg (60/255, 63/255, 65/255, 1)
#:set col_gn_marker_hsla (86/255, 1, 63/255, 1)
#:set col_header (78/255, 80/255, 141/255, 1)
#:set col_data (141/255, 78/255, 78/255, 1)

<DeltaTunerMain>:
    err_bars: dt_error_bars
    canvas.before:
        Color:
            rgba: col_bg
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        ComPortDropDown:
    BoxLayout:
        size_hint_y: None
        height: 10
        height: sum([child.height for child in self.children])
        on_children: self.height = sum([child.height for child in self.children])
        orientation: "horizontal"
        DTErrors:
            id: dt_error_bars



<ComPortDropDown>:
    Button:
        id: main_btn
        text: "COM port"
        on_release: dropdown.open(self)
        size_hint_y: None
        height: '48dp'

    DropDown:
        id: dropdown
        on_parent: self.dismiss()
        on_select: btn.text = '{}'.format(args[1])

        Button:
            text: 'First Item'
            size_hint_y: None
            height: '48dp'
            on_release: dropdown.select('First Item')

        Label:
            text: 'Second Item'
            size_hint_y: None
            height: '48dp'

        Button:
            text: 'Third Item'
            size_hint_y: None
            height: '48dp'
            on_release: dropdown.select('Third Item')


<DTErrors>:
    size_hint: None, 1
    width: 280
    height: 340
    padding: 20, 20, 20, 20
    e0: er0
    e1: er1
    e2: er2
    e3: er3
    e4: er4
    e5: er5
    e6: er6
    e7: er7
    orientation: "horizontal"
    spacing: 10
    DTErrorVertAxis
    DTErrorBar:
        id: er0
    DTErrorBar:
        id: er1
    DTErrorBar:
        id: er2
    DTErrorBar:
        id: er3
    DTErrorBar:
        id: er4
    DTErrorBar:
        id: er5
    DTErrorBar:
        id: er6
    DTErrorBar:
        id: er7



<DTErrorVertAxis>:
    size_hint: None, 1
    width: self.fwidth
    #height: 300
    canvas:
        Color:
            rgba: col_fg

<DTErrorBar>:
    size_hint: None, 1
    width: 20
    canvas:
        Color:
            rgba: col_fg
        Line:
            points: 10, 0, 10, self.height
            width: 4
        Color:
            rgb: self.highlight_color
        Line:
            points: 10, self.highlight_start, 10, self.highlight_end
            width: 1.2

<DTErrorMarker>:
    size_hint: None, None
    size: 20, 16
    canvas:
        Color:
            rgb: self.ball_color
        Line:
            points:
                (self.width/2 - self.radius,
                self.height/2 + self.value,
                self.width/2 + self.radius,
                self.height/2 + self.value)
            width: 1
        SmoothLine:
            circle: self.width/2, self.height/2 + self.value, self.radius
            width: 1.2

